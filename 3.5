#include <stdio.h>

/* Suma pagos. El programa obtiene la suma de los pagos realizados el Ãºltimo mes.
   PAG y SPA: variables de tipo real. */
void main(void) {
    float PAG, SPA = 0;

    printf("Ingrese el primer pago: ");
    scanf("%f", &PAG);

    do {
        SPA = SPA + PAG;
        printf("Ingrese el siguiente pago (0 para terminar): ");
        scanf("%f", &PAG);
    } while (PAG != 0);

    printf("El total de pagos del mes es: %.2f\n", SPA);
}
